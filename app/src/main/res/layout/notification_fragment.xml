<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notiLinearMain"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">
        <com.facebook.login.widget.ProfilePictureView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/notificationImg"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationName"
                android:text="Professor Professorson"
                android:textSize="18sp"
                android:textAlignment="textEnd"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationMessage"
                android:text="invited you to nightName"
                android:textAlignment="textEnd"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationDate"
                android:text="nightDate"
                android:textAlignment="textEnd"
                android:textSize="12sp"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNotificationDelete"
        android:src="@drawable/ic_clear_black_15dp"
        app:layout_anchor="@id/notiLinearMain"
        android:layout_gravity="end|top"
        android:background="@android:color/transparent"/>
</android.support.v7.widget.CardView>